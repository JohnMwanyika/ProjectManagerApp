extends sub-layout 
block content 
    main#main.main
        .pagetitle
            h1 General Tables
            nav
                ol.breadcrumb
                    li.breadcrumb-item
                        a(href="/dashboard") Home
                    li.breadcrumb-item.active=bd
        section.section
            .row
                each project in projects
                    .col-lg-4
                        .card.overflow-hidden(style="height:500px")
                            .card-body
                                h5.card-title #{project.name}
                                hr
                                p 
                                    strong created by: 
                                    |#{project.created_by.first_name} #{project.created_by.last_name}
                                //- project status
                                if (project.statusId.status_name == 'Active')
                                    p 
                                        strong  Status: 
                                        <span class="badge text-bg-primary">#{project.statusId.status_name}</span>
                                if (project.statusId.status_name == 'Pending')
                                    p 
                                        strong  Status: 
                                        <span class="badge text-bg-warning">#{project.statusId.status_name}</span>
                                if (project.statusId.status_name == 'Complete')
                                    p 
                                        strong  Status: 
                                        <span class="badge text-bg-success">#{project.statusId.status_name}</span>
                                if (project.statusId.status_name == 'Suspended')
                                    p 
                                        strong  Status: 
                                        <span class="badge text-bg-info">#{project.statusId.status_name}</span>
                                //- Project Description
                                strong Project Overview
                                p.text-muted.
                                    #{project.description}
                                //- total tasks
                                p
                                    <i class="bi bi-list-task"></i> 11 Tasks 
                                    each task in project.task 
                                        p #{task.title}
                                //- team members
                                h6.card-title Team
                                .row 
                                    .col-lg-6
                                        ul.list-group.list-group-flush.list-group-numbered.overflow-auto(style='max-height:150px')
                                            each team in project.team
                                                li.list-group-item
                                                    small #{team.userId.first_name} #{team.userId.last_name}

